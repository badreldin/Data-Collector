<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ben.android.datacollector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ben.android.datacollector.DataCollector"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ben.android.datacollector.LogCollectionActivity"
            android:label="@string/title_activity_log_collection" >
        </activity>
        <activity
            android:name="ben.android.datacollector.AccelerometerActivity"
            android:label="@string/title_activity_accelerometer" >
        </activity>
        <activity
            android:name="ben.android.datacollector.EnterTagActivity"
            android:label="@string/title_activity_enter_tag" >
        </activity>
        <activity
            android:name="ben.android.datacollector.TagActivity"
            android:label="@string/title_activity_tag" >
        </activity>
        <activity
            android:name="ben.android.datacollector.TaggedCollectionActivity"
            android:label="@string/title_activity_tagged_collection" >
        </activity>
    </application>

</manifest>